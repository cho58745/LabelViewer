<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Label Viewer</title>
    <script language="javascript" type="text/javascript" src="js/jquery-3.6.4.min.js"></script>
    <script language="javascript" type="text/javascript" src="js/bootstrap.bundle.js"></script>
    <script language="javascript" type="text/javascript" src="js/fontawesome.all.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/fontawesome.all.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
</head>
<style>
</style>
<!--

-->

<body>
    <%- include('./header') %>
    <div class="container my-4">
        <div class="row" id="gallerylist">
            <div class="col">
                <h4>Select Template</h4>
                <div class="mb-4" style="color: #666666;">Select a label template.</div>

                <h5>Label Template</h5>
                <div class="row mb-4 " id="gallerylist">
                    <div class="col" >
                        <div class="card" style="height: 280px;" id="type-api">
                            <div class="card-body">
                                <button type="button" class="btn btn-primary">+ add</button>
                                <button type="button" class="btn btn-secondary">None</button>
                                <button type="button" class="btn btn-success">B-box-soccer</button>
                                <button type="button" class="btn btn-danger">Danger</button>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card" style="height: 280px;" id="type-api">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                  <a class="nav-link active" aria-current="page" href="#">Bounding box Template</a>
                                </li>
                                <li class="nav-item">
                                  <a class="nav-link" href="#">Key Point Template</a>
                                </li>
                            </ul>
                            <div class="card-body d-flex">
                                <div class="flex-fill">
                                    <div class="" style="color: #666666;">Template Name</div>
                                    <div class="mb-2" >B-box-soccer</div>

                                    <div class="" style="color: #666666;">Template Type</div>
                                    <div class="mb-2" >Bounding Box</div>
    
                                    <div class="" style="color: #666666;">Key Point</div>
                                    <div class="mb-2" >21</div>
    
                                    <button type="button" class="btn btn-primary">Edit Template</button>
                                </div>
                                <div class="border border-1 rounded" style="width: 240px;">

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <h5>Preview</h5>
                <div class="" style="color: #666666;">Randomly select an image and apply the selected label.</div>

                <div class="row mb-4" id="gallerylist">
                    <div class="col">
                        <div class="card w-100" style="width: 18rem;" id="type-api">
                            <div class="card-body d-flex">
                              <div class="w-50 border border-1" style="height: 360px;"></div>
                              <div class="w-50 border border-1">
                                
                              </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col d-flex justify-content-between">
                    <button type="button" class="btn btn-lg btn-outline-primary">Back</button>
                    <button type="button" class="btn btn-lg btn-primary">Next</button>
                </div>
            </div>
        </div>

    </div>
</body>

</html>